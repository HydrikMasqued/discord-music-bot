# Discord Music Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
OWNER_ID=your_discord_user_id_here

# Bot Settings
COMMAND_PREFIX=!
MAX_TIME=600
STAY_IN_CHANNEL=true
ALONE_TIME_UNTIL_STOP=300
SKIP_RATIO=0.55

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Java Memory Settings (for Docker deployment)
JAVA_OPTS=-Xmx1024m -Xms512m

# Optional: Lavalink Configuration (if using)
LAVALINK_SERVER=ws://localhost:2333
LAVALINK_PASSWORD=youshallnotpass
